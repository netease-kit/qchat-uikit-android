<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_40_dp">

    <com.netease.yunxin.kit.common.ui.widgets.RoundTextView
        android:id="@+id/q_chat_vh_role_title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingEnd="@dimen/dimen_16_dp"
        android:paddingStart="@dimen/dimen_16_dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_14_dp"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawablePadding="@dimen/dimen_4_dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        tools:ignore="SpUsage" />
    <View
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_f5f8fc"
        android:layout_marginHorizontal="@dimen/dimen_20_dp"
        android:layout_height="@dimen/dimen_05_dp"/>
</FrameLayout>