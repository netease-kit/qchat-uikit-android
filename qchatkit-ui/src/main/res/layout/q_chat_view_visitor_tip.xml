<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:background="@color/color_f7f7f7"
    android:layout_height="@dimen/dimen_80_dp">

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/ic_qchat_visitor_tip_bg" />

    <ImageView
        android:id="@+id/ivQChatHorn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_15_dp"
        android:layout_marginTop="@dimen/dimen_25_dp"
        android:src="@drawable/ic_qchat_visitor_horn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_7_dp"
        android:gravity="start"
        android:text="@string/qchat_visitor_tip"
        android:layout_marginTop="@dimen/dimen_23_dp"
        android:layout_toEndOf="@id/ivQChatHorn"
        android:layout_toStartOf="@id/tvJoinBtn"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_15_dp"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tvJoinBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_26_dp"
        android:layout_marginEnd="@dimen/dimen_16_dp"
        android:background="@drawable/bg_shape_qchat_visitor_btn"
        android:paddingHorizontal="@dimen/dimen_12_dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:text="@string/qchat_server_state_join"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_14_dp"
        tools:ignore="SpUsage" />

</RelativeLayout>